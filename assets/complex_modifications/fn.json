{
    "title": "Fn + *",
    "rules": [
        {
            "description": "Fn + H/J/K/L -> カーソル移動",
            "manipulators": [
                {
                    "type": "basic",
                    "from": { "key_code": "h", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "key_code": "left_arrow" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "j", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "key_code": "down_arrow" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "k", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "key_code": "up_arrow" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "l", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "key_code": "right_arrow" } ]
                }
            ]
        },
        {
            "description": "Fn + I/O -> PageUp/PageDn",
            "manipulators": [
                {
                    "type": "basic",
                    "from": { "key_code": "i", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "key_code": "page_up" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "o", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "key_code": "page_down" } ]
                }
            ]
        },
        {
            "description": "Fn + Comma/Period -> Home/End",
            "manipulators": [
                {
                    "type": "basic",
                    "from": { "key_code": "comma", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "key_code": "home" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "period", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "key_code": "end" } ]
                }
            ]
        },
        {
            "description": "Fn + M -> DeleteOrBackspace",
            "manipulators": [
                {
                    "type": "basic",
                    "from": { "key_code": "m", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "key_code": "delete_or_backspace" } ]
                }
            ]
        },
        {
            "description": "Fn + U -> Context Menu (Ctrl+Opt+Cmd+U)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": { "key_code": "u", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "key_code": "u", "modifiers": [ "command", "control", "option" ] } ]
                }
            ]
        },
        {
            "description": "Fn + A/W/S/E/D/R/F/T/G/Z/X/C/V/B/N -> アプリケーション・ランチャ",
            "manipulators": [
                {
                    "type": "basic",
                    "from": { "key_code": "a", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "shell_command": "open -a 'finder'" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "w", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "shell_command": "~/.config/karabiner/app/do-w" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "s", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "shell_command": "~/.config/karabiner/app/do-s" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "e", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "shell_command": "~/.config/karabiner/app/do-e" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "d", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "shell_command": "~/.config/karabiner/app/do-d" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "r", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "shell_command": "~/.config/karabiner/app/do-r" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "f", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "shell_command": "~/.config/karabiner/app/do-f" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "t", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "shell_command": "~/.config/karabiner/app/do-t" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "g", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "shell_command": "~/.config/karabiner/app/do-g" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "z", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "shell_command": "~/.config/karabiner/app/do-z" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "x", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "shell_command": "~/.config/karabiner/app/do-x" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "c", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "shell_command": "~/.config/karabiner/app/do-c" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "v", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "shell_command": "~/.config/karabiner/app/do-v" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "b", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "shell_command": "~/.config/karabiner/app/do-b" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "n", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "shell_command": "~/.config/karabiner/app/do-n" } ]
                }
            ]
        },
        {
            "description": "Fn + 1/2/3/4/5/6/7/8/9/0 -> F#",
            "manipulators": [
                {
                    "type": "basic",
                    "from": { "key_code": "1", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "key_code": "f1" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "2", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "key_code": "f2" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "3", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "key_code": "f3" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "4", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "key_code": "f4" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "5", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "key_code": "f5" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "6", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "key_code": "f6" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "7", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "key_code": "f7" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "8", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "key_code": "f8" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "9", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "key_code": "f9" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "0", "modifiers": { "mandatory": [ "fn" ], "optional": [ "any" ] } },
                    "to": [ { "key_code": "f10" } ]
                }
            ]
        },
        {
            "description": "(Finder, Skim)Fn + Ctrl + I/O -> タブ切り替え",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [ "net\\.sourceforge\\.skim-app\\.skim" ]
                        }
                    ],
                    "type": "basic",
                    "from": { "key_code": "i", "modifiers": { "mandatory": [ "fn", "control" ] } },
                    "to": [ { "key_code": "tab", "modifiers": [ "control", "shift" ] } ]
                },
                {
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [ "net\\.sourceforge\\.skim-app\\.skim" ]
                        }
                    ],
                    "type": "basic",
                    "from": { "key_code": "o", "modifiers": { "mandatory": [ "fn", "control" ] } },
                    "to": [ { "key_code": "tab", "modifiers": [ "control" ] } ]
                },
                {
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [ "com\\.apple\\.finder" ]
                        }
                    ],
                    "type": "basic",
                    "from": { "key_code": "i", "modifiers": { "mandatory": [ "fn", "control" ] } },
                    "to": [ { "key_code": "tab", "modifiers": [ "control", "shift" ] } ]
                },
                {
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [ "com\\.apple\\.finder" ]
                        }
                    ],
                    "type": "basic",
                    "from": { "key_code": "o", "modifiers": { "mandatory": [ "fn", "control" ] } },
                    "to": [ { "key_code": "tab", "modifiers": [ "control" ] } ]
                }
            ]
        }
    ]
}
